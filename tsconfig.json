{
  "compilerOptions": {
  "rootDir": "src",
  "outDir": "dist/esm",
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  "declaration": true,
  "declarationMap": true,
  "sourceMap": true,
  "composite": false,
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist", 
    "**/*.test.ts"
  ]
}
